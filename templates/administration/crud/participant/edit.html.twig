{% extends 'Administration/default.html.twig' %}

{% block title %}Edit Participant{% endblock %}

{% block content %}

    <div class="row">
        <div class="col-md-6">
            <div class="col-md-12">
                <div class="card card-primary card-outline">
                    <div class="card-header">
                        <h3 class="card-title">
                            <i class="fas fa-edit"></i>
                            {{ participant.firstName }} {{ participant.lastName }}
                        </h3>
                        <div class="card-tools">
                            <ul class="nav nav-pills ml-auto">
                                <li class="nav-item">
                                    <a class="btn btn-info float-right"
                                       href="{{ path('participant_show', {'id': participant.id}) }}">Voir le participant</a>
                                </li>
                                <li class="nav-item">
                                    <a class="btn btn-success float-right" href="{{ path('participant_index') }}">Retour aux Participants</a>
                                </li>
                            </ul>
                        </div>
                    </div>
                    <div class="card-body pad">
                        {{ include('administration/crud/participant/_form.html.twig', {'button_label': 'Update'}) }}
                        {{ include('administration/crud/participant/_delete_form.html.twig') }}
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
