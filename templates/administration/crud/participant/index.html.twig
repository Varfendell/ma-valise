{% extends 'Administration/default.html.twig' %}

{% block title %}Participants{% endblock %}
{% block header %}Participants{% endblock %}

{% block content %}
    <div class="row">
        <div class="col-md-12">
            <div class="card card-primary card-outline">
                <div class="card-header">
                    <h3 class="card-title">
                        <i class="fa fa-paperclip"></i>
                        Liste des Participants
                    </h3>
                    <div class="card-tools">
                        <ul class="nav nav-pills ml-auto">
                            <li class="nav-item">
                                <a class="nav-link active" href="{{ path('participant_new') }}">Create new</a>
                            </li>
                        </ul>
                    </div>
                </div>
                <div class="card-body pad">
                    <table class="table">
                        <thead>
                        <tr>
                            <th>Id</th>
                            <th>Pr√©nom</th>
                            <th>Nom</th>
                            <th>Email</th>
                            <th>Actions</th>
                        </tr>
                        </thead>
                        <tbody>
                        {% for participant in participants %}
                            <tr>
                                <td>{{ participant.id }}</td>
                                <td>{{ participant.firstName }}</td>
                                <td>{{ participant.lastName }}</td>
                                <td>{{ participant.email }}</td>
                                <td>
                                    <div class="btn-group btn-group-sm">
                                        <a href="{{ path('participant_show', {'id': participant.id}) }}" class="btn bg-gradient-orange"><i class="fas fa-eye"></i></a>
                                        <a href="{{ path('participant_edit', {'id': participant.id}) }}" class="btn btn-info"><i class="fas fa-edit"></i></a>
                                    </div>
                                </td>
                            </tr>
                        {% else %}
                            <tr>
                                <td colspan="5">no records found</td>
                            </tr>
                        {% endfor %}
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
