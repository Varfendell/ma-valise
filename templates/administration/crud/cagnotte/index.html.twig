{% extends 'Administration/default.html.twig' %}

{% block title %}Cagnottes{% endblock %}
{% block header %}Cagnottes{% endblock %}

{% block content %}
    <div class="row">
        <div class="col-md-12">
            <div class="card card-primary card-outline">
                <div class="card-header">
                    <h3 class="card-title">
                        <i class="fa fa-paperclip"></i>
                        Liste des cagnottes
                    </h3>
                    <div class="card-tools">
                        <ul class="nav nav-pills ml-auto">
                            <li class="nav-item">
                                <a class="nav-link active" href="{{ path('cagnotte_new') }}">Create new</a>
                            </li>
                        </ul>
                    </div>
                </div>
                <div class="card-body pad">
                    <table class="table table-bordered">
                        <thead>
                        <tr>
                            <th style="width: 10%">Id</th>
                            <th style="width: 70%"><i class="fa fa-smile-wink"></i> Url Paypal</th>
                            <th style="width: 10%">Notification</th>
                            <th style="width: 10%">actions</th>
                        </tr>
                        </thead>
                        <tbody>
                        {% for cagnotte in cagnottes %}
                            <tr>
                                <td>{{ cagnotte.id }}</td>
                                <td>{{ cagnotte.url }}</td>
                                <td>{{ cagnotte.notification ? 'Yes' : 'No' }}</td>
                                <td>
                                    <div class="btn-group btn-group-sm">
                                        <a href="{{ path('cagnotte_show', {'id': cagnotte.id}) }}" class="btn bg-gradient-orange"><i class="fas fa-eye"></i></a>
                                        <a href="{{ path('cagnotte_edit', {'id': cagnotte.id}) }}" class="btn btn-info"><i class="fas fa-edit"></i></a>
                                    </div>
                                </td>
                            </tr>
                        {% else %}
                            <tr>
                                <td colspan="4">Aucune donn√©es pour le moment</td>
                            </tr>
                        {% endfor %}
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
