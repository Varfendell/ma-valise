                            </li>
                            <li class="nav-item">
                                <a class="btn btn-info float-right" href="{{ path('cagnotte_show', {'id': cagnotte.id}) }}">voir</a>
                            </li>
                        </ul>
                    </div>
                </div>
                <div class="card-body pad">
                    {{ include('administration/crud/cagnotte/_form.html.twig', {'button_label': 'Update'}) }}
                </div>
                {{ include('administration/crud/cagnotte/_delete_form.html.twig') }}
            </div>
        </div>
    </div>
{% endblock %}
