{% extends 'Administration/default.html.twig' %}

{% block title %}Mes projets{% endblock %}
{% block header %}Mes projets{% endblock %}

{% block content %}
    <div class="row">
        <div class="col-md-12">
            <div class="card">
                <div class="card-header">
                    <h3 class="card-title">
                        <i class="fa fa-paperclip"></i>
                        Liste de mes projets
                    </h3>
                    <div class="card-tools">
                        <ul class="nav nav-pills ml-auto">
                            <li class="nav-item">
                                <a class="nav-link active bg-maroon" href="{{ path('project_new') }}">Créer un projet</a>
                            </li>
                        </ul>
                    </div>
                </div>
                <div class="card-body pad">
                    <table class="table table-bordered">
                        <thead>
                        <tr>
                            <th>N°</th>
                            <th>Nom</th>
                            <th>Date de début</th>
                            <th>Date de fin</th>
                            <th>Description</th>
                            <th>actions</th>
                        </tr>
                        </thead>
                        <tbody>
                        {% for project in projects %}
                            <tr>
                                <td>{{ project.id }}</td>
                                <td>{{ project.name }}</td>
                                <td>{{ project.dateStart ? project.dateStart|date('d-m-Y') : '' }}</td>
                                <td>{{ project.dateEnd ? project.dateEnd|date('d-m-Y') : '' }}</td>
                                <td>{{ project.description }}</td>
                                <td>
                                    <div class="btn-group btn-group-sm">
                                        <a href="{{ path('project_show', {'id': project.id}) }}" class="btn bg-gradient-orange"><i class="fas fa-eye"></i></a>
                                        <a href="{{ path('project_edit', {'id': project.id}) }}" class="btn btn-info"><i class="fas fa-edit"></i></a>
                                    </div>
                                </td>
                            </tr>
                        {% else %}
                            <tr>
                                <td colspan="6">no records found</td>
                            </tr>
                        {% endfor %}
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
