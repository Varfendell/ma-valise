{{ form_start(form) }}
<div class="form-group">
    {{ form_row(form.firstName, {'attr': {'class': 'form-control'}}) }}
</div>
<div class="form-group">
    {{ form_row(form.lastName, {'attr': {'class': 'form-control'}}) }}
</div>
<div class="form-group">
    {{ form_row(form.email, {'attr': {'class': 'form-control'}}) }}
</div>
<div class="form-group">
    {{ form_row(form.phone, {'attr': {'class': 'form-control'}}) }}
</div>
<div class="form-group">
    {{ form_row(form.city, {'attr': {'class': 'form-control'}}) }}
</div>
<button class="btn btn-default">Sauvegarder</button>
{{ form_end(form) }}
{% if user.id is not null %}
<a href="{{ path('user_change_password', {'id': user.id}) }}" class="bg-gradient-blue">Changer le mot de passe</a>
{% endif %}
