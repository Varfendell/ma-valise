{{ form_start(form) }}
<div class="form-group">
    {{ form_row(form.firstName, {'attr': {'class': 'form-control'}}) }}
</div>
<div class="form-group">
    {{ form_row(form.lastName, {'attr': {'class': 'form-control'}}) }}
</div>
<div class="form-group">
    {{ form_row(form.email, {'attr': {'class': 'form-control'}}) }}
</div>
<div class="form-group">
    {{ form_label(form.picture) }}
    <div class="custom-file">
        {{ form_widget(form.picture, {'attr': {'class': 'custom-file-input'}}) }}
        <label class="custom-file-label" for="create_account_picture">Choisir une image</label>
    </div>
</div>
<div class="form-group">
    {{ form_row(form.phone, {'attr': {'class': 'form-control'}}) }}
</div>
<div class="form-group">
    {{ form_row(form.city, {'attr': {'class': 'form-control'}}) }}
</div>
<div class="form-group">
    {{ form_row(form.password, {'attr': {'class': 'form-control'}}) }}
</div>
<button class="btn btn-default">Envoyer</button>
{{ form_end(form) }}


<script>
    $(document).ready(function () {
        $("#user_picture").on("change", function () {
            let fileName = $(this).val().split("\\").pop();
            $(this).siblings(".custom-file-label").addClass("selected").html(fileName);
        });
        $('#user_birthdate').daterangepicker({
            singleDatePicker: true,
            showDropdowns: true,
            minYear: 1901,
            maxYear: parseInt(moment().format('YYYY'), 10)
        });
    });
</script>
