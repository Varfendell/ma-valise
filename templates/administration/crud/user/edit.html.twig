{% extends 'Administration/default.html.twig' %}

{% block title %}Edit User{% endblock %}

{% block content %}
    <div class="row">
        <div class="col-md-6">
            <div class="col-md-12">
                <div class="card card-primary card-outline">
                    <div class="card-header">
                        <h3 class="card-title">
                            <i class="fas fa-edit"></i>
                            {{ user.lastName }} {{ user.firstName }}
                        </h3>
                        <div class="card-tools">
                            <ul class="nav nav-pills ml-auto">
                                <li class="nav-item">
                                    <a class="btn btn-info float-right"
                                       href="{{ path('user_show', {'id': user.id}) }}">Voir l'utilisateur</a>
                                </li>
                                <li class="nav-item">
                                    <a class="btn btn-success float-right" href="{{ path('user_index') }}">Retour aux
                                        utilisateurs</a>
                                </li>
                            </ul>
                        </div>
                    </div>
                    <div class="card-body pad">
                        {{ include('administration/crud/user/_form.html.twig', {'button_label': 'Update'}) }}
                        {{ include('administration/crud/user/_delete_form.html.twig') }}
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
