{% extends 'base.html.twig' %}

{% block contentDefault %}
    <body class="text-sm">
    <div class="wrapper">
        <nav class="main-header navbar navbar-expand navbar-white navbar-light">
            {% include 'administration/base/_header.html.twig' %}
        </nav>
        <aside class="main-sidebar sidebar-dark-primary elevation-4">
            <a href="{{ path('app_administration_default_index') }}" class="brand-link">
                <img src="{{ asset('build/dist/img/logo.png') }}" alt="logo" class="brand-image img-circle elevation-3"
                     style="opacity: .8">
                <span class="brand-text font-weight-light">Ma Valise</span>
            </a>
            <div class="sidebar">
                <div class="user-panel mt-3 pb-3 mb-3 d-flex">
                    <div class="info">
                        <a href="{{ path('user_show', {'id': app.user.id}) }}" class="d-block">{{ app.user.firstName }} {{ app.user.lastName }}</a>
                    </div>
                </div>
                <nav class="mt-2">
                    <ul class="nav nav-pills nav-sidebar flex-column" data-widget="treeview" role="menu" data-accordion="false">
                        {% include 'administration/base/_menu.html.twig' %}
                    </ul>
                </nav>
            </div>
        </aside>
        <div class="content-wrapper">
            <div class="content-header">
                <div class="container-fluid">
                    <div class="row mb-2">
                        <div class="col-sm-6">
                            <h1 class="m-0 text-dark">{% block header %}{% endblock %}</h1>
                        </div>
                    </div>
                </div>
            </div>
            <section class="content">
                <div class="container-fluid">
                    {% block content %}{% endblock %}
                </div>
            </section>
        </div>
            {% include 'administration/base/_footer.html.twig' %}
    </div>
    </body>
{% endblock %}
